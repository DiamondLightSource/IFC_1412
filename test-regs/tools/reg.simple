#!/usr/bin/env python

import os

from fpga_lib.driver import driver

here = os.path.dirname(__file__)
register_defines = os.path.join(here, '../vhd', 'register_defines.in')

raw_regs = driver.RawRegisters('ifc_1412-regs', 1)
regs = driver.Registers(raw_regs, register_defines)

print(regs.TOP.GIT_VERSION)

# regs = driver.RawRegisters('ifc_1412-regs', 1)
# 
# while True:
#     n = regs[1] & 0xffff
#     regs[1] = n + 1

leds = regs.TOP.LEDS
while True:
    value = leds._value + 1
    leds._write_fields_wo(
        FMC1 = value & 0xFF,
        FMC2 = (value >> 8) & 0xFF,
        LED2A = (value >> 16) & 1,
        LED2B = (value >> 17) & 1)
